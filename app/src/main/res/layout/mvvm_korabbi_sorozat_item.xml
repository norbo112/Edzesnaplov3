<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/korabbi_sorozat_datum_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Napló dátum"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textStyle="bold"
            android:background="@color/edzesHatter"
            android:textColor="#fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/korabbi_sorozat_lista"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/korabbi_sorozat_datum_label" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>