<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0089C8">

        <TextView
            android:id="@+id/tevekenyseg_terv_valaszto_megnevezes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Megnevezés"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tevekenyseg_terv_valaszto_reszletek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1.nap [mell, hát]"
            android:textStyle="italic"
            android:layout_margin="4dp"
            android:padding="2dp"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tevekenyseg_terv_valaszto_megnevezes" />

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/edzesHatter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tevekenyseg_terv_valaszto_reszletek" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>